<h1>
    <span class="far fa-list-alt"></span>Snippets
</h1>

<table class="table table-hover">
  <caption>List of snippets</caption>
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Created</th>
    </tr>
  </thead>
  <tbody>
    {{#if viewData.snippets.length}}
    {{#each viewData.snippets}}
    <tr>
      <td><a class="nav-link" href="/snippets/{{this.id}}">{{this.name}}</a></td>
      <td>{{this.createdAt}}</td>
    </tr>
    {{/each}}
    {{else}}
    <tr colspan="2">
      <td class="text-center">No snippets to display.</td>
    </tr>
  {{/if}}
  </tbody>
</table>