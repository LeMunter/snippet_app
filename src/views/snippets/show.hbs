<h1><span class="fa fa-cog"></span> Snippet</h1>

<dl class="row">
  <dt class="col-sm-2">Name</dt>
  <dd class="col-sm-10">{{viewData.name}}</dd>

  <dt class="col-sm-2">Code</dt>
  <pre class="border m-1 p-2"><code>{{viewData.code}}</code></pre>
</dl>
{{#if isOwner}}
<form method="get">
  <input formaction="./{{viewData._id}}/edit" type="submit" class="btn btn-outline-warning my-2 my-sm-0" name="{{viewData._id}}" value="Edit" />
  <input formaction="./{{viewData._id}}/delete" type="submit" class="btn btn-outline-danger my-2 my-sm-0" name="{{viewData._id}}" value="Delete"/>
</form>
{{/if}}
